
@section Scripts {
    @if (TempData["Succes"] != null)
    {
        <script>
            toastr.success(  '@TempData["Succes"]')
        </script>
    }
    }

    @if (TempData["Error"] != null)
{
    <div class="alert alert-success">
        @TempData["Error"]
    </div>
}
<div class="row">

    @foreach (var item in Model)
    {
    <div class="col-4 mb-3">
            <div class="card " style="width: 18rem;">
                <img src="~/images/@item.photo" class="card-img-top"height="300px" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <p class="card-text">Price @item.price</p>
                    <p class="card-text">Quantity @item.countaty</p>
                    <a href="/Home/Detailes?Id=@item.Id" class="btn btn-primary">More Detales</a>
                </div>
            </div>
    </div>
    }
    <nav aria-label="Page navigation example" class="d-flex justify-content-center mt-4">
        <ul class="pagination">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>

</div>
